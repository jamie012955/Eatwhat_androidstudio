<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.inducesmile.eatwhat.Mood">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="心情選擇"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:background="#F1AC23"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="我現在的心情是"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:background="#F8F6F1"
        android:gravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibNext"
        android:src="@drawable/start_bow"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="103dp"
        android:longClickable="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#000000"
        android:weightSum="1"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton27"
            android:src="@drawable/map_icon"
            android:background="#040404"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.04"
            android:paddingRight="110dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton28"
            android:background="#000000"
            android:layout_alignBottom="@+id/ibstart"
            android:layout_centerHorizontal="true"
            android:src="@drawable/food"
            android:layout_weight="0.06"
            android:paddingRight="110dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton29"
            android:src="@drawable/set_icon"
            android:background="#020202"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:layout_weight="0.07" />
    </LinearLayout>


</RelativeLayout>
