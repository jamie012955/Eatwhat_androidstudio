<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.inducesmile.eatwhat.Mood"
    style="@style/mood_body">

    <include layout="@layout/toolbar"
        android:id="@+id/my_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/ricewhite">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape"
            android:text="我現在的心情是..."
            android:gravity="center_vertical|center_horizontal"
            android:textSize="22sp"
            android:textColor="@color/text_yellow" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        style="@style/moodicon">
                        <ImageButton
                            style="@style/moodiconpic"
                            android:id="@+id/ibmoodselection1"
                            android:src="@drawable/mood01_ohya"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/moodicon">
                        <ImageButton
                            style="@style/moodiconpic"
                            android:id="@+id/ibmoodselection2"
                            android:src="@drawable/mood02_bs"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/moodicon">
                        <ImageButton
                            style="@style/moodiconpic"
                            android:id="@+id/ibmoodselection3"
                            android:src="@drawable/mood03_uhm"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/moodicon">
                        <ImageButton
                            style="@style/moodiconpic"
                            android:id="@+id/ibmoodselection4"
                            android:src="@drawable/mood04_hihi"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        style="@style/moodicon">
                        <ImageButton
                            style="@style/moodiconpic"
                            android:id="@+id/ibmoodselection5"
                            android:src="@drawable/mood05_sotired"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/moodicon">
                        <ImageButton
                            style="@style/moodiconpic"
                            android:id="@+id/ibmoodselection6"
                            android:src="@drawable/mood06_gofightwin"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/moodicon">
                        <ImageButton
                            style="@style/moodiconpic"
                            android:id="@+id/ibmoodselection7"
                            android:src="@drawable/mood07_sad"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/moodicon">
                        <ImageButton
                            style="@style/moodiconpic"
                            android:id="@+id/ibmoodselection8"
                            android:src="@drawable/mood08_relax"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ibNext"
                        android:src="@drawable/next_bow"
                        android:background="#00000000"
                        android:longClickable="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:background="#000000"
            android:weightSum="1"
            android:id="@+id/linearLayout5"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <ImageButton
                style="@style/icon"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/ibMap"
                android:src="@drawable/map_icon"
                android:background="#000000"
                android:layout_alignParentBottom="true" />

            <ImageButton
                style="@style/icon"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/ibEat"
                android:src="@drawable/food"
                android:background="#000000"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/linearLayout5" />

            <ImageButton
                style="@style/icon"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/ibSetting"
                android:src="@drawable/set_icon"
                android:background="#000000"
                android:clickable="false"
                android:layout_alignTop="@+id/linearLayout5" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
