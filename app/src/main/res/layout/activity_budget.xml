<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.inducesmile.eatwhat.Budget">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="預算選擇"
        android:id="@+id/textView6"
        android:background="#F1AC23"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="這餐的最高預算"
        android:id="@+id/textView7"
        android:background="#F8F6F1"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView6"
       />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/onehun_button"
        android:background="#ffffff"
        android:layout_above="@+id/imageButton6"
       />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/fifty_button"
        android:background="#ffffff"
        android:layout_above="@+id/imageButton6"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:src="@drawable/ten_button"
        android:background="#ffffff"
        android:layout_above="@+id/imageButton6"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:src="@drawable/money_box"
        android:background="#ffffff"
        android:layout_above="@+id/bChange" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bChange"
        android:src="@drawable/changemind_bow"
        android:background="#00000000"
        android:layout_above="@+id/linearLayout6"
     />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#000000"
        android:weightSum="1"
        android:id="@+id/linearLayout6"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton24"
            android:src="@drawable/map_icon"
            android:background="#040404"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.04"
            android:paddingRight="110dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton25"
            android:background="#000000"
            android:layout_alignBottom="@+id/ibstart"
            android:layout_centerHorizontal="true"
            android:src="@drawable/food"
            android:layout_weight="0.06"
            android:paddingRight="110dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton26"
            android:src="@drawable/set_icon"
            android:background="#020202"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:layout_weight="0.07" />
    </LinearLayout>



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibStart"
        android:src="@drawable/start_bow"
        android:background="#00000000"
        android:layout_below="@+id/imageButton6" />

</RelativeLayout>
