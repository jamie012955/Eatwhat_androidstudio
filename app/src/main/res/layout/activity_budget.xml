<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.inducesmile.eatwhat.Budget"
    style="@style/budget_body">
    <include layout="@layout/toolbar"
        android:id="@+id/my_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/ricewhite">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape"
            android:text="這餐的最高預算是..."
            android:gravity="center_vertical|center_horizontal"
            android:textSize="22sp"
            android:textColor="@color/text_yellow" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginTop="30dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton3"
                        android:src="@drawable/onehun_button"
                        android:background="#ffffff"
                        android:layout_marginRight="40dp"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton4"
                        android:src="@drawable/fifty_button"
                        android:background="#ffffff" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton5"
                        android:src="@drawable/ten_button"
                        android:background="#ffffff"
                        android:layout_marginLeft="40dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/money_box"
                        android:id="@+id/imageButton6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginTop="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bChange"
                            android:src="@drawable/changemind_bow"
                            android:background="#00000000"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ibStart"
                            android:src="@drawable/start_bow"
                            android:background="#00000000"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:background="#000000"
            android:weightSum="1"
            android:id="@+id/linearLayout5"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <ImageButton
                style="@style/icon"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/ibMap"
                android:src="@drawable/map_icon"
                android:background="#000000"
                android:layout_alignParentBottom="true" />

            <ImageButton
                style="@style/icon"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/ibEat"
                android:src="@drawable/food"
                android:background="#000000"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/linearLayout5" />

            <ImageButton
                style="@style/icon"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/ibSetting"
                android:src="@drawable/set_icon"
                android:background="#000000"
                android:clickable="false"
                android:layout_alignTop="@+id/linearLayout5" />
        </LinearLayout>
    </RelativeLayout>




</LinearLayout>
