<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.inducesmile.eatwhat.Selector"
    style="@style/selector_body">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/resultbow"
                android:layout_alignParentStart="true"
                android:layout_marginStart="95dp"
                android:layout_marginBottom="102dp" />-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fu_backg"
                android:id="@+id/fu_bg" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:background="@drawable/fu_box"
                android:src="@drawable/fu_box"
                android:id="@+id/wheel"
                android:layout_marginLeft="-220dp"
                android:layout_marginTop="156dp"
                android:layout_below="@+id/imageView5"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pillar"
                android:src="@drawable/fu_pillar"
                android:layout_marginLeft="-130dp"
                android:layout_marginTop="246dp"
                android:layout_above="@+id/linearLayout8"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/fu_handle"
                android:background="#00000000"
                android:visibility="visible"
                android:layout_marginTop="255dp"
                android:layout_marginLeft="-41dp"
                android:layout_alignStart="@+id/wheel" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="開抽"
                android:id="@+id/rotate"
                android:onClick="OnRotateButtonClick"
                android:layout_above="@+id/linearLayout8"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="-26dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="455dp"
            android:layout_marginLeft="10dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/back"
                android:background="#00000000"
                android:src="@drawable/changemoney_bow" />
        </LinearLayout>



        <LinearLayout
            android:background="#000000"
            android:weightSum="1"
            android:id="@+id/linearLayout5"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <ImageButton
                style="@style/icon"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/ibMap"
                android:src="@drawable/map_icon"
                android:background="#000000"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                style="@style/icon"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/ibEating"
                android:src="@drawable/food"
                android:background="#000000"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/linearLayout5" />

            <ImageButton
                style="@style/icon"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/ibSetting"
                android:src="@drawable/set_icon"
                android:background="#000000"
                android:clickable="false"
                android:layout_alignTop="@+id/linearLayout5"
                android:layout_alignParentEnd="true" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

