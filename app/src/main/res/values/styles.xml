<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="login_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/login_littlebg</item>
    </style>
    <style name="main_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/org</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="registered_login_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/login_littlebg</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="home_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/homepage</item>
    </style>
    <style name="icon">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12sp</item>
    </style>
    <style name="mood_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="budget_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="selector_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="moodicon">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
    </style>
    <style name="moodiconpic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#00000000</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="set_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="setting_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/shape_setting</item>
    </style>
    <style name="setting_buttom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape_setting_dashed</item>
    </style>
    <style name="setting_member_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="setting_member_con_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:color">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="setting_member_con_pwd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">110dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/setting_member_pwd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>







</resources>

